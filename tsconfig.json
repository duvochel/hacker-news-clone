{
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./built",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "styles/*": ["./src/styles/*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./built", "./test/*", "node_modules"]
}
